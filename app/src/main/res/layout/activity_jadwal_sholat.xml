                                android:layout_height="50dp"
                                android:src="@drawable/ashar" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="35dp"
                                android:layout_marginStart="35dp"
