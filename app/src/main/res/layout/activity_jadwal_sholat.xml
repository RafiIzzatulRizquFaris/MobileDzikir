<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_jadwalshalat"
    tools:context="tech.toughput.mobiledzikir.JadwalSholatActivity"
    tools:layout_editor_absoluteY="25dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="25dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="164dp"
                    android:layout_height="65dp"
                    android:background="@drawable/kotak_jamtgl"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="6dp">

                    <TextClock
                        android:id="@+id/jamnya"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="11.69 am"
                        android:textAlignment="center"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/tanggalnya"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Kamis, 07 Mei 2019"
                        android:textAlignment="center"
                        android:textSize="17sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_location_on_black_24dp" />

                    <TextView
                        android:id="@+id/tv_Lokasi_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jakarta"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dan sekitarnya"
                        android:textSize="17sp" />

                </LinearLayout>

            </LinearLayout>

            <!--akhir lokasi tempat-->

            <LinearLayout
