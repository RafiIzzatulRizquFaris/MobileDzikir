<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_home"
    tools:context="tech.toughput.mobiledzikir.HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iconrmdhn"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/icon_home" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <ImageButton
                android:id="@+id/btn_doaniat"
                android:layout_width="128dp"
                android:layout_height="118dp"
                android:layout_marginLeft="31dp"
                android:src="@drawable/menuicondoa"/>

            <ImageButton
                android:id="@+id/btn_dzikir"
                android:layout_width="128dp"
                android:layout_height="118dp"
                android:layout_marginRight="31dp"
                android:layout_marginLeft="40dp"
                android:src="@drawable/menuicondzikir"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">
            <ImageButton
                android:id="@+id/btn_jadwal"
                android:layout_width="128dp"
                android:layout_height="118dp"
                android:layout_marginLeft="31dp"
                android:src="@drawable/menuiconjdwlslt"/>

            <ImageButton
                android:id="@+id/btn_kiblat"
                android:layout_width="128dp"
                android:layout_height="118dp"
                android:layout_marginLeft="40dp"
                android:src="@drawable/menuiconkblt"/>
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
